doctype html
html(ng-app='prx.base', ng-class="{'open': drawerOpen}", ng-strict-di)
  head
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    title PRX
    meta(name='mobile-web-app-capable', content='yes')
    link(rel='shortcut icon', sizes='196x196', href='/assets/images/app_icon@3x.png')
    base(href='/')
    for style in styles
      link(rel='stylesheet' href=style)
  body(ng-controller='appCtrl as app', ng-class="{'chromeless': !app.chrome.visible, 'with-player': !!app.player.nowPlaying, 'show-target': app.fileTargetVisible}", ng-dragover='app.showFileTarget($event)')
    prx-drawer._chase(drawer='main')
      header.chrome(ng-class="{'loading': loading}")
        prx-loading-bar
        xi-context-menu.context-menu
          ui-view(name='contextMenu')
        div
          prx-drawer-button
          h1
            a(ui-sref='home') PRX
          prx-nav-buttons
      prx-modal
      main(ui-view, autoscroll='app.chrome.visible')
        prx-loading-bar
        .empty-space
      footer.chrome
        div
          section
            .beta-notice
              p
                | You're seeing a beta preview of prx.org.
                a(ng-href='http://help.prx.org/anonymous_requests/new') Let us know
                |  what you think.
              a(ng-href='{{app.desktopUrl}}') Use Old Version
          section
            h3 Company
            a(href='//www.prx.org/about-us/what-is-prx') About Us
            a(href='//blog.prx.org/') Blog
            a(href='//www.prx.org/about-us/organization') Team
            a(href='//www.prx.org/about-us/press') Press
            a(href='//www.prx.org/about-us/funding') Funding
            a(href='//www.prx.org/donate') Donate
          section
            h3 Support
            a(href='http://help.prx.org/') Help
            a(href='http://status.prx.org/') Status
            a(href='//www.prx.org/terms-of-use') Terms
            a(href='//www.prx.org/privacy-policy') Privacy
          section
            h3 Projects
            a(href='http://www.radiotopia.fm') Radiotopia
            a(href='http://www.matter.vc') Matter Ventures
        ul
          li
            a(href='//www.prx.org/newsletters') 
          li
            a(href='https://www.twitter.com/prx') 
          li
            a(href='https://www.facebook.com/publicradioexchange') 
      prx-global-player
      prx-file-picker-overlay
    #sheet(lock-parent-scrolling, xi-sheet)
      xi-sheet-title
      button(xi-sheet-dismiss)
      ui-view(name='sheet')
    for content in inlinescripts
      script!= content
    for script in scripts
      if scripts.length > 1
        script(src=script)
      else
        script(src=script, async)
    if liveReload
      script.
        var z = document.createElement('script');
        z.src = "http://"+window.location.hostname+":35729/livereload.js";
        document.body.appendChild(z);
    if FEAT.GA_KEY
      script.
        (function(i,s,o,g,r,e,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;a[e]=function(){i[r][e]()};m.
        parentNode.insertBefore(a,m)})(window,document,'script',
        '//www.google-analytics.com/analytics.js','ga','onerror');
        ga.onerror=function(){function o(c){if(typeof c=='function')c({get:g})}for(var
        n=ga.q,i=0;i<n.length;i++)o.apply(n,n[i]);function g(){return'private'}ga=o};
        ga('create', '#{FEAT.GA_KEY}', 'prx.org');
        ga('set', 'dimension1', '#{FEAT.NODE_ENV}');
        ga('require', 'displayfeatures');
        var googletag = googletag || {};
        googletag.cmd = googletag.cmd || [];
