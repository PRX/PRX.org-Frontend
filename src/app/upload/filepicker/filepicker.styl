#filepicker-overlay {
  background: rgba(black, .7);
  fixed: top left;
  right: 0; bottom: 0;
  z-index: 1500;
}

#filepicker {
  display: flex;
  flex-flow: column;
  absolute: top 20px left 20px;
  right: 20px;
  bottom: 20px;

  background: $tab-bed-background-color;
  border-radius: $border-radius;

  ul[tab-list] {
    padding: 20px 50px 0 10px;
  }

  .alert-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;

    .alert {
      margin: 0 30px;
      padding: 6px 0;
      background: rgba(black, .7);
      text-align: center;
      color: $contrast-body-copy-color;

      p {
        margin: 0;
        padding: 0;
        line-height: 125%;
      }
    }
  }

  .dismiss {
    flex: 0;
    absolute: top right 20px;
    font-size: 0;
    background: transparent;
    width: 20px; height: 20px;

    &::before {
      content: '';
      font-family: 'fontello';
      color: $white;
      text-align: center;
      font-size: 20px;
      line-height: 20px;
      position: absolute;
      width: 100%;
      height: 100%;
    }
  }

  .tabs {
    flex: 0 0 auto;
    margin: -20px -20px 10px -20px;
    border-radius: 3px 3px 0 0;
    padding: 20px 20px 0 0;
    background-color: $light-blue;
    li {
      display: inline-block;
      margin-left: 7px;
      border: 1px solid transparent;
      padding: 5px 20px;
      background-color: $darkest-blue;
      color: $contrast-body-copy-color;
      border-radius: 3px 3px 0 0;
      cursor: not-allowed;
      &:first-child {
        color: $body-copy-color;
        background-color: #FFF;
        border-bottom-color: #FFF;
        cursor: default;
      }
    }
  }

  .tab-content {
    flex: 1;
    display: flex;
    flex-flow: column;
    justify-content: center;
    border: 3px dashed transparent;
    border-radius: 20px;
    padding: 20px;
    margin-top: 10px;
    align-items: center;

    small {
      display: block;
      font-style: italic;
      margin: 10px 0;

      &::before, &::after {
        content: ' – ';
      }
    }

    span {
      font-size: 2em;
      line-height: 1.2em;
      position: relative;

      &::after {
        opacity: 0;
        min-width: 100%;
        border-bottom: 3px solid #FFF;
        content: 'Drop Files to Upload';
        absolute: top left 50%;
        margin-left: -50%;
        text-align: center;
        background-color: #FFF;
      }
    }

    button {
      flex-grow: 0;
      width: auto;
    }

    &.hovering-add,
    &.hovering-remove {
      transition: 0.3s border-color;

      small,
      button,
      span::after {
        transition: 0.3s opacity;
      }
    }

    &.hovering {
      border-color: $light-grey;

      small, button {
        opacity: 0;
      }

      span::after {
        opacity: 1;
      }
    }
  }
}
