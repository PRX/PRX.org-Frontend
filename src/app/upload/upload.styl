article.upload {
  padding-bottom: 40px;

  section {
    position: relative;

    .placeholeder {
      display: hidden;
    }

    .header {
      background-image: url('/assets/images/tl_blue_mics.png');

      h1,
      .status .container {
        max-width: 1000px;
        margin: 0 auto;
      }

      h1 {
        color: white;
        font-size: 40px;
        padding: 40px 0;
      }

      .status {
        background: white;
        height: 74px;
        max-width: 1200px;
        width: 100%;
        z-index: 199;
        padding: 0 20px;
        border-bottom: 1px solid transparent;
        transition: height 0.2s, border-bottom-color 0.2s;

        h2, h3 {
          transition:  font-size 0.2s, line-height 0.2s;
        }

        &.stuck {
          border-bottom-color: lightest-grey;
          height: 42px;
          h2 {
            font-size: 0.9em;
            line-height: 2.0em;
          }

          h3 {
            font-size: 0.6em;
            line-height: 1.0em;
          }
        }
      }
    } // .header

    form {
      max-width: 1000px;
      margin: 0 auto;
      padding-left: 275px;
      position: relative;
      display: block;

      fieldset {
        border-bottom: 1px solid black;
        padding-bottom: 30px;

        &:last-child {
          border-bottom: none;
        }

        fieldset {
          border: 0;
          background: white;
          padding: 30px 50px;
          max-width: 575px;
        }

        label {
          &.required {
            h2, h3, h4, h5, h6 {
              &::after {
                content: '*';
                color: red;
              }
            }
          }
        }

        h2 {
          padding: 25px 0 10px;
          margin: 0;

        }

        h4 {

        }

        p {
          padding: 0 0 15px;
          max-width: 575px;
        }

        textarea {
          font-size: 14px;
          line-height: 21px;
          width: 600px;
          height: 110px;
          padding: 12px;
          border: 1px solid lightest-grey;
          outline: none;
          &.ng-pristine {
            color: light-grey;
          }
        }

        input {
          background: white;
        }

        input[disabled] {
          background-color: offwhite;
        }
      }
    }
  }
}

article.upload {
  .decorate {
    input {
      width: 600px;
    }

    button {
      display: block;
      margin-top: 15px;
    }

    .cover {
      height: 185px;
      border: 2px light-grey dashed;
      background-color: white;
      width: 740px;
      background-image: url('/assets/images/icons/coverphoto@2x.png');
      background-size: 83px 62.5px;
      background-repeat: no-repeat;
      background-position: 50% 50px;
      position: relative;

      &::after {
        content: '1200x300 px';
        color: light-grey;
        position: absolute;
        width: 100px;
        text-align: center;
        left: 50%;
        margin-left: -50px;
        top: 120px;
      }
    }

    .thumbnail {
      width: 235px;
      height: 235px;
      background-image: url('/assets/images/icons/coverphoto@2x.png');
      background-size: 83px 62.5px;
      background-repeat: no-repeat;
      background-position: 50% 60px;
      position: relative;
      border: 2px light-grey dashed;
      background-color: white;

      &::after {
        content: '200x200 px';
        color: light-grey;
        position: absolute;
        width: 100px;
        text-align: center;
        left: 50%;
        margin-left: -50px;
        top: 135px;
      }
    }
  }
}

