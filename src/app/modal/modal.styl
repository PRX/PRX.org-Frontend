.modalContainer {
  modal-scrollbar();

  z-index: 500;
  fixed: top right;
  left: 0; bottom: 0;
  max-height: 100%;
  background: rgba(0, 0, 0, 0.85);
  overflow-x: hidden;
  padding: 25px;

  @media screen and (min-width: 600px) and (min-height: 600px) {
    top: 50%;
    bottom: auto;
    left: 50%;
    right: auto;
    width: 500px;
    height: 500px;
    margin-top: -250px;
    margin-left: -250px;

    .modal {
      padding-bottom: 0!important;
    }

    &.ng-hide-add {
      transition: transform 0.2s, opacity 0.1s 0.1s;
      display:block!important;
      transform-origin: right top;

      &.ng-hide-add-active {
        transform: scale(0.25, 0.25);
        opacity: 0;
      }
    }
  }

  .modal {
    absolute: top 25px left 25px;
    bottom: 25px; right 25px;
    display: flex;
    flex-direction: column;
  }

  a.dismiss {
    width: 20px;
    height: 20px;
    absolute: top -7px right -7px;
    display: block;
    flex-shrink: 0;

    &:before {
      content: 'î †';
      font-family: 'fontello';
      color: $white;
      text-align: center;
      font-size: 20px;
      line-height: 20px;
      position: absolute;
      width: 100%;
      height: 100%;
    }
  }

  h1 {
    font-size: 25px;
    margin: 0 15px 15px 0;
    flex-shrink: 0;
  }

  h1, h2, article {
    color: #FFF;
  }

  article {
    overflow-y: auto;
    flex-shrink: 100;
    padding-right: 4px;

    img {
      max-width: 100%;
    }

    -webkit-overflow-scrolling: touch;

    p {
      margin-bottom: 10px;
    }
  }

  ul.actions {
    padding-top: 25px;
    li {
      margin-bottom: 10px;

      &:last-child {
        margin-bottom: 0;
      }

      a {
        &:hover {
          text-decoration: none;
          background: darker-blue;
        }
        color: white;
        height: 40px;
        line-height: 40px;
        display: block;
        background: $blue;

        &.listen:after {
          image: '/assets/images/headphones_white.png' auto 14px;
        }

        &.schedule:after {
          image: '/assets/images/calendar_white.png' auto 14px;
        }

        &.view:after {
          image: '/assets/images/eye_white.png' auto 14px;
        }

        &.listen, &.schedule, &.view {
          &:after {
            display: inline-block;
            content: '';
            float: left;
            height: 40px;
            width: 60px;
            background-position: 12px center;
            background-repeat: no-repeat;
          }
        }
      }
    }
  }
}
