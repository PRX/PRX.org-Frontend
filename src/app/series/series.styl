article.series {
  .media {
    .img.coverart {
      display: block;
      background: #266797;
      width: 150px;
      height: 150px;
      margin: 15px auto 30px;
      position: relative;
      float: none;
      border: 1px solid lightest-grey;

      &:before {
        content: '';
        position: absolute;
        top: 149px;
        left: 5px
        width: 140px;
        height: 15px;
        background-image: url('/assets/images/coverart_shadow@2x.png');
        background-size: 140px 15px;
      }
    }

    ul.metadata {
      line-height: 16px;

      li {
        display: inline-block;
        white-space: nowrap;
        font-size: 12px;
        margin: 0;
        padding: 0;
        margin-right: 10px;
        line-height: 10px;
        padding-right: 10px;

        strong {
          font-weight: 600;
          padding-right: 4px;
        }

        address {
          display: inline-block;
        }
      }
    }

    h1 {
      margin-bottom: 10px;
    }

    .description {
      display: none;
    }

    .buttons {
      padding-top: 15px;

      a {
        display: block;
        width: 100%;
        color: white;
        background: blue;
        font-size: 14px;
        padding: 11px 14px;
        position: relative;
        margin-bottom: 10px;

        &.share {
          padding-left: 50px;

          &::after {
            position: absolute;
            top: 14px;
            left: 12px;
            width: 16px;
            height: 16px;
            image: '/assets/images/share.png' 15px;
            content: '';
          }
        }

        &.play {
          padding-left: 62px;
          background-color: gunmetal-blue;

          &::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            width: 40px;
            background: orange url('/assets/images/bt_play.png') center center / 12px no-repeat;
          }
        }
      }
    }
  }
}

article.series {
  #poster {
    background: offwhite;

    & > section.stories {
      section-child-h-margins: 10px;
      position: relative;

      & > section {
        margin-bottom: 10px;
      }

      & > a {
        absolute: right 15px top 15px;
        line-height: 24px;
      }
    }

    h2 {
      flex-basis: 100%;
      padding-top: 20px;
      margin-bottom: 10px;
      border-bottom: 1px solid black;
    }
  }
}

