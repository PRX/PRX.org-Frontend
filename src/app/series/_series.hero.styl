article.series .hero {
  background: $content-fill-color;
  padding-bottom: 20px;

  .media {
    padding-top: 25px;

    .coverart {
      position: relative;
      float: none;
      display: block;
      background: #266797; // TODO
      width: 150px;
      height: @width;
      margin: 0 auto 30px;
      border: 1px solid $art-border-color;

      &::before {
        content: '';
        position: absolute;
        top: 149px;
        left: 5px
        width: 140px;
        height: 15px;
        background-image: url('/assets/images/coverart_shadow@2x.png');
        background-size: 140px 15px;
      }
    }

    .media-content { // TODO rename?
      h1 {
        color: $heading-color;
      }

      .donate {
        button-orange(true)
        order: 1;
        height: 30px;
        min-width: 145px;
        line-height: 30px;
        padding-right: 30px;
        padding-left: 35px;
        margin-top: 10px;
        margin-bottom: 10px;
        text-align: left;
        display: inline-block;

        &::before {
          font-family: 'fontello';
          content: 'î …';
          line-height: 30px;
          padding: 0 10px 0 3px;
        }
      }

      .description {
        display: none;
      }

      ul.metadata {
        line-height: 16px;

        li {
          display: inline-block;
          white-space: nowrap;
          font-size: 12px;
          margin: 0;
          padding: 0;
          margin-right: 10px;
          line-height: 12px;
          padding-right: 10px;

          strong {
            font-weight: 600;
            padding-right: 4px;
          }

          address {
            display: inline-block;
          }
        }
      }
    }
  }
}
