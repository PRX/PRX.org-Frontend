.account {
  #hero .img, & > a .img {
    border: 2px solid light-grey;
    background-color: lightest-grey;
    border-radius: 50%;
    width: 70px;
    height: @width;
    float: left;
    margin: 10px;
    position: relative;
    z-index: 5;

    &.default {
      image: '/assets/images/anonymous.png' 70px;
    }
  }
}

