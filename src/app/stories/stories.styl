@import "stories/stories.hero.styl";
@import "stories/stories.social.styl";
@import "stories/stories.license.styl";
@import "stories/stories.tags.styl";
@import "stories/stories.story.styl";

article.story {
  background: content-fill-color;

  @media multi-column {
    background: transparent;
  }

  .ad {
    // Ad is 50px tall.
    // 3 * measure = 63
    background: page-fill-color;
    border-top: 10px solid page-fill-color;
    border-bottom: 3px solid page-fill-color;

    @media $media-tablet {
      // add another measure
      border-top-width: 10px + 21px;
      border-bottom: 5px solid transparent;

      .slot {
        margin-left: $comfortable-spacing * -1;
      }
    }
  }
}
