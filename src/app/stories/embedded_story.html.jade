section.story
  .category audio story
  a(ng-click="play()")
    prx-img(src="story.imageUrl", default-class="default", ng-class="{playing: story.playing()}")
  h3(overflow-class)
    a(ui-sref="story") {{story.title}}
  time(datetime="P{{story.duration}}S") {{story.duration * 1000 | timeCode }}
  .desc(ng-bind-html="story.shortDescription", limit-to-html="150")
