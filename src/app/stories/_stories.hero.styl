article.story .hero {
  background-image: url('/assets/images/tl_blue_mics.png');
  position: relative;
  color: $contrast-body-copy-color;
  padding: 10px 0 0;

  a { color: inherit; }

  .content_advisory {
    display: inline-block;
    background: black;
    color: white;
    font-size: 12px;
    padding-right: 4px;
    line-height: 20px;
    font-weight: bold;

    &::before {
      content: '!'
      background: $blue;
      width: 20px;
      display: inline-block;
      color: white;
      text-align: center;
      margin-right: 4px;
      font-weight: bold;
    }
  }

  .player {
    float: left;
    margin-top: 22px;
    margin-right: 15px;
  }

  .category {
    color: $slight-grey;
    text-transform: uppercase;
    font-size: 11px; // TODO
    font-weight: 600; // TODO
    letter-spacing: 0.07em; // TODO
    line-height: 22px; // Equals top margin on .player button
  }

  h1 {
    font-weight: 300;
    font-size: 22px; // TODO
    line-height: 24px; // TODO
    max-height: 72px;
    overflow: hidden;
    color: inherit;
  }

  ul.metadata {
    padding-top: 10px;
    clear: both;

    li {
      white-space: nowrap;
      font-size: 13px; // TODO
      line-height: 13px;
      display: inline-block;
      margin-right: 10px;
      padding-right: 10px;
      border-right: 1px solid $slight-grey; // TODO

      &:last-of-type {
        border-right: none;
        padding-right: 0;
      }
    }
  }

  .toolbar {
    background-color: $offwhite; // TODO
    margin-top: 15px;
    padding: 10px 0;

    section {
      display: flex;

      .donate {
        button-orange(false)
        line-height: 35px;
        order: 2;
        flex-grow: 2;
        margin-left: 10px;

        &::before {
          font-family: 'fontello';
          content: '';
          line-height: 32px;
          padding: 0 10px 0 0;
        }
      }

      .share {
        display: flex;
        order: 1;

        h4 {
          background-color: $blue;
          line-height: 35px;
          padding: 0 15px 0 0;
          position: relative;

          &::before { // Share arrow
            font-family: 'fontello';
            line-height: 32px;
            content: '';
            padding: 0 10px;
          }

          &::after { // Triangle
            width: 0;
            height: 0;
            line-height: 0;
            border-right: 6px solid $dark-blue;
            border-top: 6px solid transparent;
            border-bottom: 6px solid transparent;
            content: '';
            display: inline-block;
            position: absolute;
            top: 12px
            right: 0;
          }
        }

        a {
          display: block;
          width: 35px;
          height: @width;
          line-height: @width;
          background-color: $dark-blue;
          font-family: 'fontello';
          font-size: 16px;
          text-align: center;
          color: $contrast-body-copy-color;
        }
      }
    }
  }
}
