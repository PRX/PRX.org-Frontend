// Gallery Panel styles are below section.story{}

section.story {
  position: relative;
  height: 70px;
  flex-basis: 100%; // TODO probably doesn't belong here; gallery specific

  .desc { display: none; }

  h3 {
    font-size: 16px; // TODO
    line-height: 21px;
    max-height: 42px;
    overflow: hidden;
    font-weight: 400;

    &.overflowing {
      -webkit-mask-image: linear-gradient(to right, rgba(0,0,0,1) 50%, rgba(0,0,0,0) 65%), linear-gradient(to bottom, rgba(0,0,0,1) 60%, rgba(0,0,0,0) 60%);
    }
  }

  .category {
    text-transform: uppercase;
    white-space: nowrap;
    color: $subtle-body-copy-color;
    font-size: 8px; // TODO
    line-height: 10px;
    font-weight: 600;
  }

  time {
    font-size: 11px; // TODO
    font-weight: 100;
    line-height: 18px;
    display: block;
  }

  & > a {
    float: left;

    .img {
      background-color: $image-placeholder-fill-color;
      position: relative;
      width: 70px;
      height: @width;
      margin-right: 10px; // TODO var?

      &.default {
        background-image: url('/assets/images/loading.png');
        background-repeat: repeat;
      }

      &::after {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 25px;
        height: @width;
        background: rgba(orange, 0.9) url('/assets/images/bt_play.svg') center center / 8px no-repeat;
        content: '';
      }

      &.playing::before {
        background-image: url('/assets/images/bt_pause.svg');
        background-size: 12px;
      }
    }
  }
}
