form[name='story_edit'] {
  .no-image-file {
    button {
      font-size: 13px;
      margin-top: 10px;
    }
  }

  .audio-file,
  .image-file {
    width: 100%;

    .delete {
      display: block;
      padding: 6px 0;
      font-size: 11px;
      font-weight: bold;
      cursor: pointer;
    }

    div.image-wrapper {
      display: inline-block;
      position: relative;
      line-height: 0;

      .loading {
        visibility: hidden;
        opacity: 0;
        transition: visibility 0s linear 0.5s, opacity 0.5s linear;
      }

      &.uploading {
        .loading {
          visibility: visible;
          opacity: 1;
          transition-delay: 0s;
          background: rgba(0,0,0,0.5);
          @extends $loading-indicator;
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
        }
      }

      img {
        max-width: 200px;
        max-height: 200px;
      }
    }
  }
}

xi-progress-bar {
  display: block;
  background: $progress-well;
  margin: 0;

  div {
    background: $progress-bar;
    height: 5px;
    border-bottom: 1px solid $progress-well;
    border-top: 1px solid $progress-well;
    transition: width 1s linear;
  }
}

prx-upload-audio-file {
  display: block;
  width: 100%;

  > div {
    position: relative;
    input {
      width: 100%;
    }
    .duration {
      position: absolute;
      top: 10px;
      right: 10px;
      color: $light-grey;
    }
    > div:last-child {
      display: flex;
      flex-flow: row nowrap;
      > div:first-child {
        flex: 1 1 0;
      }
      > div:last-child {
        flex: 0 0 31px;
        width: 31px;
        overflow: hidden;
        display: flex;
        flex-flow: column;
        a {
          button-blue();
          flex: 1 1 0;
          margin-top: 1px;
          margin-left: 1px;
          &:first-child {
            margin-top: 0;
          }
          font-size: 0;
          &:before {
            font-family: 'fontello';
            color: $white;
            text-align: center;
            font-size: 18px;
            line-height:33px;
          }
        }
        a.delete:before {
          content: '\e80d';
        }
        a.uploading:before {
          content: '\e80e';
        }
        a.success:before {
          content: '\e80f';
        }
      }
    }
  }
}
