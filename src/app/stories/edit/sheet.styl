form[name='story_edit'] {
  .no-image-file {
    button {
      font-size: 13px;
      margin-top: 10px;
    }
  }

  .audio-file,
  .image-file {
    width: 100%;

    .delete {
      display: block;
      padding: 6px 0;
      font-size: 11px;
      font-weight: bold;
      cursor: pointer;
    }

    xi-progress-bar {
      display: block;
      background: $progress-well;
      margin: 12px 0 6px;

      div {
        background: $progress-bar;
        height: 3px;
      }
    }

    div.image-wrapper {
      display: inline-block;
      position: relative;
      line-height: 0;

      .loading {
        visibility: hidden;
        opacity: 0;
        transition: visibility 0s linear 0.5s, opacity 0.5s linear;
      }

      &.uploading {
        .loading {
          visibility: visible;
          opacity: 1;
          transition-delay: 0s;
          background: rgba(0,0,0,0.5);
          @extends $loading-indicator;
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
        }
      }

      img {
        max-width: 200px;
        max-height: 200px;
      }
    }
  }
}
