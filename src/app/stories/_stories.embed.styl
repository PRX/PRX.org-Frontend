article.embed-story {
  width: 100%;
  height: 100%;
  position: relative;
  background: #fafafa;
  cursor: pointer;

  .embed-player {
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    flex-direction: column;

    &.share .modals #share,
    &.donate .modals #donate,
    &.subscribe .modals #subscribe,
    &.idle .modals #subscribe {
      visibility: visible;
      opacity: 1.0;
      transition-delay: 0s;
    }

    header {
      flex-grow: 1;
      max-height: 100px;

      h1 {
        font-size: 20px;
        font-weight: bold;
        padding: 8px;
      }
    }

    > section {
      flex-grow: 5;
      display: flex;
      align-items: stretch;

      button.toggle {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        align-items: stretch;
        align-content: center;
        justify-content: center;
        background: none;
        padding: 20px;
        z-index: 200;

        // background: transparent url('/assets/images/em_pause.svg') 5px center / auto 50px no-repeat;

        div {
          display: none;
          flex-grow: 1;
          max-height: 80px;
          min-width: 100px;
          height: 60%;
          background-position: center center;
          background-repeat: no-repeat;
          background-size: auto 100%;

          &.pause {
            background-image: url('/assets/images/em_pause.svg');
          }

          &.play {
            background-image: url('/assets/images/em_play.svg');
          }

          &.pause { display: block; }
          &.play { display: none; }
        }

        &.paused .pause { display: none; }
        &.paused .play { display: block; }
      }

      .track {
        flex-grow: 10;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: stretch;
        position: relative;

        .waveform {
          display: block;
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          border-color: #333;
          z-index: 50;
        }

        .progress {
          background: #aaa;
          position: absolute;
          top: 0;
          left: 0;
          bottom: 0;
          right: 0;
          overflow: hidden;
          z-index: 40;

          .waveform {
            display: none;
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            border-color: white;
          }
        }
      }
    }

    footer {
      position: absolute;
      right: 0;
      bottom: 0;
      z-index: 100;

      button {
        background: black;
        display: inline-block;
        margin: 0 4px 3px;
        border: 0;
        padding: 5px 10px;
        text-transform: uppercase;
      }
    }

    .modals {
      > div {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 500;
        background: black;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-content: center;
        cursor: default;
        visibility: hidden;
        opacity: 0.0;
        transition: visibility 0s ease 0.15s, opacity 0.15s ease;

        &#subscribe {
          form {
            position: relative;

            .error {
              position: absolute;
              text-align: center;
              color: red;
              width: 100%;
              height: 15px;
              bottom: -15px;
              display: none;
            }

            &.ng-invalid.ng-dirty .error {
              display: block;
            }

          }

          input.ng-invalid.ng-touched {
            background: rgba(255, 210, 210, 1.0);
          }
        }

        h2 {
          color: white;
          text-align: center;
          font-size: 24px;
          padding-top: 20px;
          margin: 0 auto;
          max-width: 90%;
        }

        h3 {
          color: #a0a0a0;
          text-align: center;
          font-size: 16px;
          padding-top: 8px;
          margin: 0 auto;
          max-width: 90%;
        }

        form {
          padding: 15px;
        }

        input[type='text'] {
          flex-grow: 7;
        }

        input[type='submit'] {
          text-transform: uppercase;
          cursor: pointer;
        }

        .sharables {
          display: block;
          display: flex;
          justify-content: center;
          align-items: center;
          height: 95px;

          a {
            color: $orange;
            display: block;
            font-size: 50px;
            margin: 0 10px;
            font-family: 'fontello';

            &.facebook {
              color: $facebook-blue;
            }

            &.twitter {
              color: $twitter-blue;
            }
          }
        }

        button.skip,
        button.dismiss {
          color: #aaa;
          background: none;
          padding: 0 25px 0 0;
          margin-top: 10px;
          float: right;
        }
      }
    }
  }
}


article.X-embed-story {
  width: 100%;
  height: 100%;
  position: relative;
  background: #fafafa;
  cursor: pointer;

  .embed-player {
    width: 100%;
    height: 100%;
    position: relative;

    &.share .layer6,
    &.donate .layer7,
    &.unattended .layer5 {
      visibility:visible;
      opacity:1;
      transition-delay:0s;
    }

    .layer2 {
      position: absolute;
      width: 100%;
      height: 100%;
      background-image: url('/assets/images/em_wave_orange.png');
      background-size: auto 80%;
      background-position: left center;
      background-repeat: repeat-x

      .progress {
        position: absolute;
        width: 50%;
        height: 100%;
        background-image: url('/assets/images/em_wave_orange_lt.png');
        background-size: auto 80%;
        background-position: left center;
        background-repeat: repeat-x;
      }
    }

    .layer3 {
      position: absolute;
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;

      h1 {
        color: white;
        font-family: 'Open Sans', Helvetica, sans-serif;
        font-weight: bold;
        font-size: 20px;
        position: relative;
        z-index: 99;
        -webkit-user-select: none;
        padding-left: 60px;
        padding-top: 17px;
        padding-bottom: 17px;
        // padding-left: 55px;
        margin: 0 10px;
        background: transparent url('/assets/images/em_pause.svg') 5px center / auto 50px no-repeat;

        &.paused {
          background-image: url('/assets/images/em_play.svg');
          background-position: left center;
        }
      }
    }

    .layer4 {
      .scrubber {
        position: absolute;
        width: 100%;
        height: 100%;
        background: transparent;
        display: block;
      }
    }

    .layer4b {
      a.share {
        position: absolute;
        right: 0;
        bottom: 0;
        display: block;
        padding: 10px;
        font-weight: bold;
      }

      a.donate {
        position: absolute;
        right: 60px;
        bottom: 0;
        display: block;
        padding: 10px;
        font-weight: bold;
      }
    }

    .layer5 {
      transition:visibility 0s linear 0.15s, opacity 0.15s linear;
      opacity: 0;
      visibility: hidden;
      position: absolute;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.8);
      z-index: 999;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-wrap: wrap;
      cursor: default;
      flex-direction: column;

      h1 {
        color: white;
        font-weight: bold;
        font-size: 32px;
        text-align: center;
      }

      div {
        margin: 25px 0 0 0;
        display: flex;
        align-items: center;
        justify-content: center;

        button {
          max-width: 350px;
          margin: 0 5px;
          flex: 1 1 0;
          min-width: 250px;
          background: $player-button-fill-color;

          &:last-child {
            background: rgb(155, 155, 155);
          }
        }
      }
    }

    .layer6,
    .layer7 {
      transition:visibility 0s linear 0.15s, opacity 0.15s linear;
      opacity: 0;
      visibility: hidden;
      font-family: 'fontello';
      position: absolute;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.85);
      z-index: 9999;

      .close {
        position: absolute;
        right: 0;
        bottom: 0;
        display: block;
        padding: 10px;
        font-weight: bold;
        color: white;
      }

      div {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;

        h1,
        h2 {
          color: white;
          font-size: 24px;
          height: 60px;
        }

        h2 {
          height: 30px;
        }

        > p {
          position: relative;
          color: white;
          text-align: center;
          max-width: 70%
          margin-bottom: 15px;
        }

        span {
          display: block;
          display: flex;
          justify-content: center;
          align-items: center;

          a {
            color: $orange;
            display: block;
            font-size: 50px;
            margin: 0 10px;

            &.facebook {
              color: $facebook-blue;
            }

            &.twitter {
              color: $twitter-blue;
            }
          }
        }
      }
    }
  }
}

@media (max-width: 600px) {
  article.embed-story {
    .embed-player {
      .layer3 {
        h1 {
          font-size: 14px;
          line-height: 18px;
        }
      }
    }
  }
}
