article.story #hero .media {
  ul.metadata {
    display: inline-block;
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
  }

  li {
    white-space: nowrap;
    display: inline-block;
    margin-right: micro-spacing;
    border-right: 1px solid slight-grey;
    padding-right: micro-spacing;
    line-height: 1rem;
    margin-top: 0.25rem;
    margin-bottom: 0.25rem;

    &:last-of-type {
      border-right: none;
    }
  }

  @media multi-column {
    flex: 0 100%;

    ul.metadata {
      padding-top: 0;
      padding-bottom: 0;
    }

    .img {
      width: 78px;
      height: @width;
      border: 1px solid slight-grey;
      background-color: grey;
      margin-top: 3rem;
      margin-right: cozy-spacing;
    }
  }
}
