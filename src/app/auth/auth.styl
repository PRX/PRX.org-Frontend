prx-auth-badge {
  display: inline-block;
  min-width: 100px;

  span.name {
    display: none;
    @media $media-width-tablet {
      display: inline-block;
    }
  }

  .img {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    border: 1px solid $light-blue;
    display: inline-block;
    margin-bottom: -10px;
    @media $media-width-tablet {
      border-width: 2px;
      width: 40px;
      height: 40px;
      margin-right: -10px;
      margin-left: 10px;
      margin-bottom: -15px;
    }
  }

  .loading-spinner {

    margin-left: 25px; margin-right: 25px;

    @extends $loading-indicator;
    background-color: $slight-grey;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    width: 31px;
    height: 31px;
    margin: auto;
    border-radius: 50%;
  }
}

prx-auth-window {
  text-align: left;

  h3 {
    line-height: 24px;
  }

  p {
    margin-bottom: 10px;
  }

  iframe {
    position: absolute;
    top: 0; left: 0;
    right: 0; bottom: 0;
    height: 200px;
    border: 1px solid $slight-grey;
    border-top-width: 0;
  }
}
