.persistent-player(ng-class="{show: !!app.player.nowPlaying}")
  .scrubber-track
    .scrubber(ng-style="{width: app.player.nowPlaying.position / app.player.nowPlaying.story.length / 10 + '%'}")
  prx-player-button(sound="app.player.nowPlaying")
    small {{app.player.nowPlaying.position | timeCode }}
  prx-img.thumb(src="app.player.nowPlaying.story.imageUrl")
  .about
    .title {{app.player.nowPlaying.story.title}}
    .byline by {{app.player.nowPlaying.account.name}}
  ul.actions(ng-flag="lovesharebuy")
    li.share
    li.love
