.persistent-player {
  // State and Animations
  &.show-add {
    transform: translateY(65px);
    transition: transform 0.2s;
  }

  &.show-add-active {
    display: block;
    transform: translateY(0px);
  }

  &.show,
  &.show-add {
    display: flex;
  }

  display: none;
  flex-direction: row;
  height: 67px;
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000; // TODO
  padding-top: 2px;
  max-width: 450px;
  margin: 0 auto 0 0;
  background: $global-player-fill-color;

  &::before {
    content: '';
    background-color: $player-button-fill-color;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 65px;
    height: @height;
    background-position: bottom left;
    background-repeat: no-repeat;
    image: '/assets/images/player_bars.png' 65px;
  }

  a {
    flex-shrink: 0;
  }

  .scrubber-track {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: $global-player-track-fill-color;

    .scrubber {
      width: 50px;
      height: 100%;
      border-right: 1px solid $orange; // TODO // What is this?
      background-color: $global-player-progress-fill-color;
    }
  }

  button {
    @extend $player-button;
    border: none;
    width: 65px;
    height: @width;
    line-height: 65px;
    font-size: 22px;
    margin: 0;
    flex: none;
    background-color: transparent;
  }

  .thumb {
    flex: none;
    float: left;
    margin: 5px 10px;
    width: 55px;
    height: @width;
    background: $light-blue; // TODO
    background-position: center;
    background-size: cover;
  }

  .about {
    height: 100%;
    font-size: 11px;
    line-height: 15px;
    display: flex;
    flex-direction: column;
    justify-content: center;

    .byline {
      font-weight: 300;
    }

    a {
      color: white; // TODO
    }
  }

  .timecode {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 65px;
    font-size: 11px;
    line-height: 14px;
    font-weight: 300;
    color: $darkest-blue;
    text-align: center;
    pointer-events: none;
  }
}
