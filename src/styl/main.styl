@import "reset.styl";
@import "variables.styl";
@import "buttons.styl";
@import "menus.styl";
@import "typography.styl";
@import "header.styl";
@import url("http://fonts.googleapis.com/css?family=Open+Sans:400,300,800,700,600");

body {
  min-height: 100%;
  padding-bottom: 10px;
}

body.with-player div[ui-view] {
  padding-bottom: 75px;
}

div[ui-view] {
  padding-top: action-bar-height;
}

.open {
  
  header, div[ui-view], .persistent-player {
    transition: transform 0.2s;
    transform: translateX(250px);
    width: 100%;
  }
  
  body {
    overflow: hidden;
    width: 100%;
  }

  div.drawer {
    transition: transform 0.2s;
    transform: none;
  }
}

.open-add, .open-remove {
  transition-duration: 0.2s;
}
.open-add-active {
  div[ui-view] {
    background: rgb(245, 244, 242);
  }
  div.drawer {
    transform: none;
  }
}

.open-remove-active {
  transition-duration: 0.2s;

  header, div[ui-view], .persistent-player {
    transition: transform 0.2s;
    transform: none;
    width: 100%;
  }
  div.drawer {
    transition: transform 0.2s;
    transform: translateX(-250px);
  }
}

section.player, .persistent-player {
  .toggle-button {
    position: relative;
    z-index: 10;
    button-orange();
    width: 70px;
    height: 70px;
    display: block;
    font-family: FontAwesome;
    font-size: 40px;
    line-height: 70px;
    &.play:before {
      content: "\f04b";
    }
    &.pause:before {
      content: "\f04c";
    }
    &:before {
      display: block;
      width: 100%;
    }
    float: left;
    margin-right: 10px;
    margin-top: 5px;
  }
}

.persistent-player {
  display: none;
  height: 65px;
  fixed: bottom left;
  right: 0px;
  background: darkest-blue;
  .toggle-button {
    width: 65px;
    height: 65px;
    line-height: 65px;
    font-size: 22px;
    margin: 0;
    small {
      absolute: bottom left;
      width: 65px;
      font-size: 11px;
      line-height: 14px;
      font-weight: 300;
      color: darkest-blue;
    }
  }
  .thumb {
    margin: 5px 10px;
    width: 55px;
    height: 55px;
    float: left;
    background: light-blue;
  }
  .title {
    font-size: 11px;
    absolute: top 10px left 140px;
    right: 45px;
    color: white;
    display: inline-block;
    line-height: 15px;
  }
  .actions {
    absolute: top 5px right 5px;
    width: 25px;
    li {
      button-blue(true);
      margin: 0 0 5px;
      height: 25px;
      width: 25px;
      &:before {
        font-size: 10px;
        line-height: 25px;
      }

      &.share:before {
        content: '\f064';
      }
      &.love:before {
        content: '\f004';
      }
    }
  }
}

.persistent-player.show-add {
  transform: translateY(65px);
  transition: transform 0.2s;
}

.persistent-player.show-add-active {
  display: block;
  transform: translateY(0px);
}

.persistent-player.show, .persistent-player.show-add {
  display: block;
}

section.player {
  margin-top: 0;
  background: url('/assets/images/boston.png');
  background-size: cover;
  background-position: center;
  padding: 14px;
  height: 150px;

  .category {
    position: relative;
    z-index: 10;
    color: light-grey;
    text-transform: uppercase;
    font-size: 11px;
    line-height: 10px;
    margin-left: 81px;
    font-weight: 600;
    letter-spacing: 0.07em;
  }
  
  position: relative;
  &:before {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    display: block;
    content: '';
    background: rgba(0, 0, 0, 0.6);
    z-index: 9;
  }

  &:after {
    absolute: top left;
    right: 0;
    bottom: 0;
    display: block;
    content: '';
    background: rgba(255, 255, 255, 0.5);
    z-index: 8;
  }

  h1 {
    position: relative;
    z-index: 10;
    line-height: 26px;
    font-size: 22px;
    margin-top: 3px;
    color: #FFF;
    font-weight: 300;
    height: 80px;
    padding-bottom: 5px;
    overflow: hidden;
  }

  h3 {
    padding-top: 5px;
    line-height: 26px;
    font-size: 12px;
    clear: both;
    font-weight: 300;
    color: #fff;
  }
}

div[ui-view] .loading {
  fixed: top 50% left 20px;
  right: 20px;
  height: 22px;
  margin-top: -5px;
  background: lightest-grey;

  &:before {
    color: white;
    content: 'Loading...';
    width: 100%;
    height: 100%;
    position: absolute;
    text-align: center;
    line-height: 22px;
    font-size: 11px;
    text-transform: uppercase;
  }

  .bar {
    height: 100%;
  }
}

div[ui-view].ng-enter {
  opacity: 0;
  transition: 0.2s linear all;
  &.ng-enter-active {
    opacity: 1;
  }
}

div[ui-view] ul.actions {
  background: lightest-grey;
  list-style-type: none;
  padding: 8px 14px;
  display: -webkit-flex;
  flex-wrap: nowrap;
  align-content: center;
  li {
    button-blue(true);
    flex-grow: 1;
    flex-basis: 1px;
    margin-left: 10px;
    height: 25px;
    line-height: 25px;
    font-size: 11px;
    font-weight: 300;

    &.buy {
      button-orange(true);
    }
    &:first-child {
      margin-left: 0;
    }
    .more {
      position: absolute;
      right: 8px;
      height: 25px;
      line-height: 25px;
    }
  }
}

section.body {
  background: #fff;
  padding: 0 14px;
  article {
    &:before {
      content: '';
      display: block;
      margin: 0 -14px 10px;
      border-top: 1px solid rgb(225, 225, 225);
    }

    &:first-child:before {
      display: none;
      margin: 0;
    }
    p {
      font-size: 14px;
      line-height: 22px;
      font-weight: 300;
    }
  }
}