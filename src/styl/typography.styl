body {
  font-family: 'Open Sans', sans-serif;
  text-rendering: optimizeLegibility;
  color: grey;
}

a {
  color: blue;
  text-decoration: none;

  &:active {
    color: dark-blue;
  }

  &.current:hover {
    text-decoration: none;
  }
}

body {
  font-weight: 400;
  line-height: 22px;
  font-size: 14px;
}

h1 {
  font-size: 22px;
  line-height: 26px;
}

h2 {
  font-size: 20px;
}

h3 {
  font-size: 18px;
  line-height: 44px;
}

h4 {
  font-size: 12px;
}

small {
  font-size: 12px;
  line-height: 17px;
}

.unbreakable {
  white-space:nowrap;
}

@media multi-column {
  h1, h2, h3 {
    color: dark-grey;
  }

  h1 {
    font-size: 32px;
    line-height: 35px;
  }

  h2 {
    font-size: 25px;
    line-height: 35px;
  }

  h4 {
    font-size: 16px;
    line-height: 35px;
  }
}
