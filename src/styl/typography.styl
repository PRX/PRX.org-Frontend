body {
  font-family: 'Open Sans', sans-serif;
  text-rendering: optimizeLegibility;
  color: grey;
}

h1, h2, h3 {
  color: dark-grey;
}

h1 {
  font-size: 32px;
  line-height: 55px;
}

h2 {
  font-size: 25px;
  line-height: 44px;
}

h3 {
  font-size: 18px;
  line-height: 44px;
}

h4 {
  font-size: 16px;
  line-height: 44px;
}

@media screen and (max-width : 480px) {
  body {
    font-weight: 400;
    line-height: 22px;
    font-size: 14px;
  }

  h1 {
    font-size: 22px;
    line-height: 26px;
  }
  h2 {
    font-size: 20px;
  }
  h4 {
    font-size: 12px;
  }
}

a {
  color: blue;
  text-decoration: none;
  &:hover, &:active {
    color: dark-blue;
  }
  &:hover {
    text-decoration: underline;
  }

  &.current:hover {
    text-decoration: none;
  }
}

.unbreakable {
  white-space:nowrap;
}
