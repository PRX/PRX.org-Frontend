// Colors

grey = mid-grey           = rgb(103, 103, 103);
gray = grey;
light-grey = lighter-grey = rgb(163, 163, 163);
light-gray = light-grey;
lightest-grey             = rgb(230, 230, 230);
lightest-gray = lightest-grey;
offwhite                  = rgb(240, 240, 240);
dark-grey = darker-grey   = rgb(52, 52, 52);
dark-gray = dark-grey;
darkest-grey              = rgb(37, 37, 37);
darkest-gray = darkest-grey;

orange = light-orange     = rgb(245, 159, 81);
dark-orange               = rgb(226, 139, 66);

blue = mid-blue           = rgb(54, 138, 162);
light-blue                = rgb(112, 142, 151);
darker-blue = dark-blue   = rgb(43, 113, 135);
darkest-blue              = rgb(44, 89, 102);

red = light-red           = rgb(222, 99, 100);
dark-red                  = rgb(196, 88, 88);

// scrollbars

scrollbar-size            = 9px;
scrollbar-track-color     = rgba(light-grey, 0.5);
scrollbar-thumb-color     = rgba(darkest-grey, 0.8);

// modal scrollbar

m-scrollbar-track-color   = rgba(blue, 0.2);
m-scrollbar-thumb-color   = rgba(blue, 0.8);

// Header sizes

action-bar-height = 50px;
tall-action-bar-height = 73px;

// Breakpoints

multi-column = "screen and (min-width: 700px)";
tall-screen  = "screen and (min-height: 1000px), screen and (min-width: 700px) and (min-height: 430px)";
high-dpi     = "all and (-webkit-min-device-pixel-ratio:1.5),(min--moz-device-pixel-ratio:1.5),(-o-min-device-pixel-ratio:1.5/1),(min-device-pixel-ratio:1.5),(min-resolution:" + unit(138, dpi) + "),(min-resolution:" + unit(1.5, dppx) + ")";

// Margins
tiny-horizontal-padding = 15px;
horizontal-padding = 30px;

// Distance between sections
section-spacing = 20px;

// Widths
max-content-width = 1000px;
