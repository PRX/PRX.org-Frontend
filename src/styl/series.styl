article.series {
  #hero {
    .container {
      & > section {
        background: offwhite;
        margin-left: -1 * tiny-horizontal-padding;
        margin-right: -1 * tiny-horizontal-padding;
        border-top: 1px solid lightest-grey;
      }

      & > section > h2, & > section > .story {
      }

      & > section > h2 {
        padding: 10px 0 0 0;
      }

      .story {
      }
    }
  }

  #hero {
    .media {
      flex: 0 100%;
      padding-bottom: 10px;

      .img.coverart {
        display: block;
        background: #266797;
        width: 150px;
        height: 150px;
        margin: 15px auto 30px;
        position: relative;
        float: none;

        &:before {
          content: '';
          position: absolute;
          top: 150px;
          left: 5px
          width: 140px;
          height: 15px;
          background-image: url('/assets/images/coverart_shadow@2x.png');
          background-size: 140px 15px;
        }
      }

      h1 {
        margin-bottom: 10px;
      }

      p {
        display: none;
      }

      dl.metadata {
        margin-top: 0;
        display: flex;
        flex-wrap: wrap;

        dt, dd {
        }

        dt {
          font-weight: 500;

          &:after {
            content: ':';
            padding-right: 5px;
          }
        }

        dd {
          padding-right: 10px;
          margin-right: 10px;
        }
      }
    }
  }
}
