article.story-time {
  #hero {
    padding: 15px;
    background: url('/assets/images/towers.png');
    position: relative;

    &:before {
      content: '';
      display: block;
      absolute: top left;
      bottom: 0; right: 0;
      background: rgba(black, 0.3);
      z-index: 1;
    }

    h1, h2 {
      position: relative;
      z-index: 2;
      color: white;
    }

    h1 {
      font-weight: lighter;
      font-size: 2.5em;
      line-height: 1.5em;
    }
  }

  form {
    margin-top: 15px;
    &.ng-leave {
      transition: transform 0.5s, opacity 0.2s;
      position: absolute;
      &.ng-leave-active {
        transform: scale(0,0);
        opacity: 0;
      }
    }
  }
  
  p.subscribed {
    margin-top: 15px;
    border-radius: 3px;
    background: offwhite;
    border: 1px solid lightest-grey;
    padding: 15px;

    &.ng-enter {
      width: 100%;
      transition: transform 0.5s, opacity 0.2s 0.3s;
      transform: scale(0,0);
      opacity: 0;
      position: absolute;

      &.ng-enter-active {
        transform: none;
        opacity: 1;
      }
    }
  }
}
