article.story {
  #hero {
    color: white;
    font-weight: lighter;
    font-size: 12px;
    background-image: url('/assets/images/tl_blue_mics.png');

    &.matt {
      position: relative;
      background-image: url('/assets/images/banner_matt.png');
      background-size: cover;
      background-position: center center;
      &:before {
        absolute: top left;
        bottom: 0; right: 0;
        content: '';
        background: rgba(darkest-grey, 0.7);
      }
    }

    a {
      color: white;
      font-weight: normal;
    }

    .category {
      position: relative;
      z-index: 10;
      color: lightest-grey;
      text-transform: uppercase;
      font-size: 11px;
      line-height: 10px;
      margin-left: 81px;
      font-weight: 600;
      white-space: nowrap;
      letter-spacing: 0.07em;
    }

    h1 {
      color: white;
      position: relative;
      z-index: 10;
      font-weight: 300;
      height: 80px;
      padding-bottom: 5px;
      overflow: hidden;
    }

    button {
      @extend $player-button;
      border: none;
      float: left;
      margin-right: 10px;
      margin-top: 5px;
    }

    address, span {
      position: relative;
      z-index: 10;
      display: inline-block;
      margin-right: 10px;
      white-space: nowrap;
    }
  }

  section.details a {
    font-weight: bold;
  }

  section.details h2 {
    display: none;
    @media multi-column {
      display: block;
    }
  }
}

section.story {
  position: relative;
  font-size: 10px;
  height: 70px;

  & > a {
    float: left;
    .img {
      width: 70px;
      height: 70px;
      margin-right: 10px;
    }
  }

  h3 {
    line-height: 18px;
    font-size: 16px;
    height: 60px;
    overflow: hidden;
    padding-top: 10px;
    margin-bottom: -4px;
    -webkit-mask-image: linear-gradient(to bottom, rgba(0,0,0,1) 74%,
    rgba(0,0,0,0.6) 74%, rgba(0,0,0,0) 92%);
  }

  .category {
    position: absolute;
    color: light-grey;
    font-size: 8px;
    line-height: 10px;
    font-weight: 600;
    letter-spacing: 0.07em;
    text-transform: uppercase;
    white-space: nowrap;
    top: 0px;
    left: 80px;
  }
}
