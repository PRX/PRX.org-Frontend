.modal {
  z-index: 500;
  fixed: top right;
  left: 0; bottom: 0;
  background: rgba(0, 0, 0, 0.85);
  overflow-x: hidden;
  overflow-y: auto;

  padding: 25px;

  a.dismiss {
    width: 20px;
    height: 20px;
    image: '/assets/images/cancel_white.png' 20px;
    absolute: top 13px right 13px;
    display: block;
  }

  h1 {
    font-size: 25px;
    margin-bottom: 15px;
    margin-top: 10px;
  }

  h1, h2, p {
    color: #FFF;
  }

  ul.actions {
    margin-top: 15px;
    li a {
      &:hover {
        text-decoration: none;
        background: darker-blue;
      }
      color: white;
      height: 40px;
      line-height: 40px;
      margin-bottom: 10px;
      display: block;
      background: blue;

      &.listen:after {
        image: '/assets/images/headphones_white.png' auto 14px;
      }

      &.schedule:after {
        image: '/assets/images/calendar_white.png' auto 14px;
      }

      &.view:after {
        image: '/assets/images/eye_white.png' auto 14px;
      }

      &.listen, &.schedule, &.view {
        &:after {
          display: inline-block;
          content: '';
          float: left;
          height: 40px;
          width: 60px;
          background-position: 12px center;
          background-repeat: no-repeat;
        }
      }
    }
  }
}
